<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    
    <!-- Breadcrumb / Back Button -->
    <div class="mb-6">
      <%= link_to users_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium transition duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Volver a usuarios
      <% end %>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        <%= user.new_record? ? "Nuevo Usuario" : "Editar Usuario" %>
      </h1>
      <p class="text-gray-600">
        <%= user.new_record? ? "Completa el formulario para crear un nuevo usuario" : "Actualiza la información del usuario" %>
      </p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      
      <%= form_with(model: user, class: "p-8") do |form| %>
        
        <!-- Error Messages -->
        <% if user.errors.any? %>
          <div class="mb-6 bg-red-50 border-l-4 border-red-400 p-4 rounded-r-lg">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-semibold text-red-800 mb-2">
                  <%= pluralize(user.errors.count, "error") %> impidió guardar este usuario:
                </h3>
                <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
                  <% user.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Name Field -->
        <div class="mb-6">
          <%= form.label :name, "Nombre", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <%= form.text_field :name, 
                placeholder: "Ingresa el nombre completo",
                class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200 text-gray-900 placeholder-gray-400" %>
          </div>
        </div>

        <!-- Email Field -->
        <div class="mb-8">
          <%= form.label :email, "Correo Electrónico", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <%= form.text_field :email, 
                type: "email",
                placeholder: "usuario@ejemplo.com",
                class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200 text-gray-900 placeholder-gray-400" %>
          </div>
        </div>

        <!-- Divider -->
        <div class="border-t border-gray-200 my-8"></div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <%= form.submit user.new_record? ? "Crear Usuario" : "Guardar Cambios",
              class: "flex-1 inline-flex items-center justify-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg shadow-md transition duration-200 transform hover:scale-105 cursor-pointer" %>
          
          <%= link_to "Cancelar", users_path,
              class: "flex-1 inline-flex items-center justify-center px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold rounded-lg transition duration-200" %>
        </div>

        <!-- Helper Text -->
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-500">
            <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Todos los campos son obligatorios
          </p>
        </div>

      <% end %>
    </div>

    <!-- Additional Info Card (optional) -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-blue-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div class="ml-3">
          <p class="text-sm text-blue-700">
            <strong>Consejo:</strong> Usa un correo electrónico válido para garantizar la comunicación con el usuario.
          </p>
        </div>
      </div>
    </div>

  </div>
</div>