<% content_for :title, "Users" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-4xl font-bold text-gray-900 mb-2">Usuarios</h1>
          <p class="text-gray-600">Gestiona todos los usuarios del sistema</p>
        </div>
        <%= link_to new_user_path, class: "mt-4 sm:mt-0 inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg shadow-md transition duration-200 transform hover:scale-105" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          Nuevo Usuario
        <% end %>
      </div>
    </div>

    <!-- Notice Alert -->
    <% if notice.present? %>
      <div class="mb-6 bg-green-50 border-l-4 border-green-400 p-4 rounded-r-lg shadow-sm">
        <div class="flex items-center">
          <svg class="w-6 h-6 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="text-green-800 font-medium"><%= notice %></p>
        </div>
      </div>
    <% end %>

    <!-- Users Grid -->
    <div id="users" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @users.each do |user| %>
        <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 overflow-hidden">
          <!-- Card Header con gradiente -->
          <div class="h-24 bg-gradient-to-r from-indigo-500 to-purple-600"></div>
          
          <!-- Avatar -->
          <div class="relative px-6 -mt-12">
            <div class="w-24 h-24 bg-white rounded-full shadow-lg flex items-center justify-center border-4 border-white">
              <span class="text-3xl font-bold text-indigo-600">
                <%= user.name&.first&.upcase || user.email&.first&.upcase || "U" %>
              </span>
            </div>
          </div>

          <!-- Card Body -->
          <div class="px-6 py-4">
            <h3 class="text-xl font-bold text-gray-900 mb-1">
              <%= user.name || "Usuario" %>
            </h3>
            <p class="text-gray-600 text-sm mb-4">
              <%= user.email %>
            </p>

            <!-- Stats o info adicional -->
            <div class="flex items-center text-sm text-gray-500 mb-4">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <%= user.created_at&.strftime("%d/%m/%Y") || "Fecha no disponible" %>
            </div>

            <!-- Actions -->
            <%= link_to user, class: "block w-full text-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition duration-200 transform hover:scale-105" do %>
              Ver detalles
              <svg class="w-4 h-4 inline-block ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Empty State -->
    <% if @users.empty? %>
      <div class="text-center py-16 bg-white rounded-xl shadow-lg">
        <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <h3 class="text-2xl font-semibold text-gray-900 mb-2">No hay usuarios a√∫n</h3>
        <p class="text-gray-600 mb-6">Comienza agregando tu primer usuario al sistema</p>
        <%= link_to "Crear primer usuario", new_user_path, class: "inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg shadow-md transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>