<% content_for :title, "Detalle de Usuario" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    
    <!-- Breadcrumb / Back Button -->
    <div class="mb-6">
      <%= link_to users_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium transition duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Volver a usuarios
      <% end %>
    </div>

    <!-- Notice Alert -->
    <% if notice.present? %>
      <div class="mb-6 bg-green-50 border-l-4 border-green-400 p-4 rounded-r-lg shadow-sm animate-fade-in">
        <div class="flex items-center">
          <svg class="w-6 h-6 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="text-green-800 font-medium"><%= notice %></p>
        </div>
      </div>
    <% end %>

    <!-- Main Card -->
    <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
      
      <!-- Header con gradiente y avatar -->
      <div class="relative h-32 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500">
        <div class="absolute -bottom-16 left-8">
          <div class="w-32 h-32 bg-white rounded-full shadow-xl flex items-center justify-center border-4 border-white">
            <span class="text-5xl font-bold text-indigo-600">
              <%= @user.name&.first&.upcase || @user.email&.first&.upcase || "U" %>
            </span>
          </div>
        </div>
      </div>

      <!-- Contenido del perfil -->
      <div class="pt-20 px-8 pb-8">
        
        <!-- Nombre y título -->
        <div class="mb-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">
            <%= @user.name || "Usuario sin nombre" %>
          </h1>
          <p class="text-gray-600 flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <%= @user.email %>
          </p>
        </div>

        <!-- Detalles del usuario -->
        <div class="bg-gray-50 rounded-xl p-6 mb-8">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Información del Usuario</h2>
          
          <div class="space-y-4">
            <%= render @user %>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          
          <!-- Edit Button -->
          <%= link_to edit_user_path(@user), class: "flex-1 inline-flex items-center justify-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg shadow-md transition duration-200 transform hover:scale-105" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Editar Usuario
          <% end %>

          <!-- Delete Button -->
          <%= button_to @user, method: :delete, 
              data: { turbo_confirm: "¿Estás seguro de eliminar este usuario? Esta acción no se puede deshacer." },
              class: "flex-1 inline-flex items-center justify-center px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg shadow-md transition duration-200 transform hover:scale-105" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Eliminar Usuario
          <% end %>
        </div>

        <!-- Información adicional -->
        <div class="mt-8 pt-6 border-t border-gray-200">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm text-gray-600">
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span>
                <strong>Creado:</strong> <%= @user.created_at&.strftime("%d/%m/%Y %H:%M") || "N/A" %>
              </span>
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>
                <strong>Actualizado:</strong> <%= @user.updated_at&.strftime("%d/%m/%Y %H:%M") || "N/A" %>
              </span>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>